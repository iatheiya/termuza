<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.TermuxApp.DayNight.NoActionBar" parent="Theme.Termux.Material3">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:navigationBarDividerColor">@color/colorOutlineVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:colorEdgeEffect">@color/colorPrimaryContainer</item>
        <item name="android:colorForeground">@color/colorOnSurface</item>
        <item name="android:colorBackgroundFloating">@color/colorSurfaceVariant</item>
        <item name="android:actionBarStyle">@style/Widget.Material3.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_24</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView</item>
        <item name="materialButtonStyle">@style/Widget.Termux.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Termux.Card</item>
    </style>

    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.TermuxApp.DayNight.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarForeground">@color/colorOnPrimary</item>

        <item name="buttonBarButtonStyle">@style/TermuxActivity.Drawer.ButtonBarStyle.Light</item>
        <item name="termuxActivityDrawerBackground">@color/colorSurface</item>
        <item name="termuxActivityDrawerImageTint">@color/colorOnSurface</item>

        <item name="extraKeysButtonTextColor">@color/colorOnSurface</item>
        <item name="extraKeysButtonActiveTextColor">@color/colorPrimary</item>
        <item name="extraKeysButtonBackgroundColor">@color/colorSurfaceVariant</item>
        <item name="extraKeysButtonActiveBackgroundColor">@color/colorPrimaryContainer</item>

        <item name="android:statusBarContrastEnforced">true</item>
        <item name="android:navigationBarContrastEnforced">true</item>
        <item name="android:windowElevation">8dp</item>
    </style>

    <style name="Theme.TermuxApp.DayNight.DarkActionBar" parent="Theme.Termux.Material3">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:actionBarStyle">@style/Widget.Material3.ActionBar.Dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.TermuxApp.Light.NoActionBar" parent="Theme.Material3.Light">
        <item name="android:windowBackground">@color/colorInverseSurface</item>
        <item name="android:statusBarColor">@color/colorInversePrimary</item>
        <item name="android:navigationBarColor">@color/colorInverseSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:colorForeground">@color/colorOnBackground</item>
        <item name="android:actionBarStyle">@style/Widget.Material3.ActionBar.Light</item>
    </style>

    <style name="Theme.TermuxApp.Light.DarkActionBar" parent="Theme.Material3.Light">
        <item name="android:windowBackground">@color/colorInverseSurface</item>
        <item name="android:statusBarColor">@color/colorInversePrimary</item>
        <item name="android:navigationBarColor">@color/colorInverseSurface</item>
        <item name="android:actionBarStyle">@style/Widget.Material3.ActionBar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Material3.ActionBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Termux.HeadlineLarge</item>
        <item name="android:popupTheme">@style/Theme.TermuxApp.DayNight.NoActionBar</item>
    </style>

    <style name="Widget.Material3.ActionBar.Dark" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Termux.HeadlineLarge</item>
        <item name="android:popupTheme">@style/Theme.TermuxApp.DayNight.DarkActionBar</item>
    </style>

    <style name="Widget.Material3.ActionBar.Light" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorInverseSurface</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Termux.HeadlineLarge</item>
        <item name="android:popupTheme">@style/Theme.TermuxApp.Light.NoActionBar</item>
    </style>

    <style name="Widget.Termux.Card" parent="Widget.Material3.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:foreground">@drawable/ripple_selector</item>
    </style>

    <style name="Widget.Termux.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

</resources>